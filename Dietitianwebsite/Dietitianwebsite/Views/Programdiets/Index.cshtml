@model IEnumerable<Dietitianwebsite.Models.Programdiet>

@{
    ViewData["Title"] = "Index";
}


@{if (User.IsInRole("Administrator") || User.IsInRole("Dietitian") )
{
    <p>
                                    <a asp-action="Create">Create New</a>
    </p>
}}

@foreach (var item in Model) {
            {
                <div class="card border-warning" style="width: 18rem; display:inline-block; margin-left:60px;margin-bottom:30px; border-width:0px">
                    <div class="card-body">
                        

                        <strong><img src="@Url.Content(item.image)" width="250" height="250" /> </strong>
                        <strong>Name of the Program: @Html.DisplayFor(modelItem => item.Name)  </strong>
                        <p>Type:@Html.DisplayFor(modelItem => item.type)</p>
                        <a style="background-color:green; border-width:0px; "asp-action="Details" asp-route-id="@item.ProgramId" class="btn btn-primary">Details</a>
                        @{if (User.IsInRole("Administrator") || User.IsInRole("Dietitian") ){
                                        <a style="background-color:white; color:green; border-color:green;" asp-action="Delete" asp-route-id="@item.ProgramId" class="btn btn-primary">Delete</a>
                        }}
                    </div>
                    
                </div>
       
            }
            
