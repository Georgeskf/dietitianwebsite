<div id="bmi_metric" class="border border-primary p-2 text-center">
	<div class="row">
		<div class="col-3"></div>
		<div class="col-6">
			<button type="button" onclick="show_metric()" class="btn btn-primary" id="show_metric">Metric</button>&nbsp
			<button type="button" onclick="show_american()" class="btn btn-success" id="show_american">American</button>
		</div>
		<div class="col-3"></div>
	</div>
	<div class="row" id="form_metric">
		 <div class="row">
			<div class="col-3"></div>
			<div class="col-6">
				 <label for="height_metric">Put your height in meters</label><br />
				<input type="number" name="height_metric" id="height_metric" placeholder="Height(m)" />
			</div>
			<div class="col-3"></div>
		 </div>
		 <div class="row">
			<div class="col-3"></div>
			<div class="col-6">
				<label for="weight_metric">Put your weight in kilograms</label><br />
				<input type="number" id="weight_metric" placeholder="Weight(kg)" />
			</div>
			<div class="col-3"></div>
		 </div>
		<div class="row mt-1">
			<div class="col-3"></div>
			<div class="col-6">
				<button type="button" onclick="calculate_metric()" class="btn btn-outline-primary" id="submit_metric">Submit</button>
			</div>
			<div class="col-3"></div>
		</div>
	</div>
	<div class="row d-none" id="form_american">
		<div class="row">
			<div class="col-3"></div>
			<div class="col-6">
				<label for="height_american">Put your height in inches</label><br />
				<input type="number" name="height_american" id="height_american" placeholder="Height(in)" />
			</div>
			<div class="col-3"></div>
		</div>
		<div class="row">
			<div class="col-3"></div>
			<div class="col-6">
				<label for="weight_american">Put your weight in pounds</label><br />
				<input type="number" id="weight_american" placeholder="Weight(lbs)" />
			</div>
			<div class="col-3"></div>
		</div>
		<div class="row mt-1">
			<div class="col-3"></div>
			<div class="col-6">
				<button type="button" onclick="calculate_american()" class="btn btn-outline-primary" id="submit_american()">Submit</button>
			</div>
			<div class="col-3"></div>
		</div>
	</div>
</div>
<div id="result" class="border border-dark p-2 mt-2 text-center d-none">

</div>
<script src="~/js/site.js" asp-append-version="true"></script>